                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding start_datetime, Converter={StaticResource DateTimeToStringConverter}, ConverterParameter=View}" 
                                            CellStyle="{StaticResource DataGridCell_NoBorder_Style}" IsReadOnly="True" Width="130">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="Начало" TextAlignment="Center" TextWrapping="Wrap"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding end_datetime, Converter={StaticResource DateTimeToStringConverter}, ConverterParameter=View}" 
                                            CellStyle="{StaticResource DataGridCell_NoBorder_Style}" IsReadOnly="True" Width="130">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="Окончание" TextAlignment="Center" TextWrapping="Wrap"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1">
                    <Button Grid.Row="100"
                            Click="TopPromotions_SaveStatistics_Button_Click" Content="Сохранить данные"
                            Margin="5" Padding="5" Height="Auto">
                        <Button.Style>
                            <Style BasedOn="{StaticResource Button_Style}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Items.Count, ElementName=TopPromotions_DataGrid}" Value="0">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <Grid Name="PickupPointsLoad_Grid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1px" BorderBrush="LightGray" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Style="{StaticResource InfoField_Style}" HorizontalAlignment="Center" Content="Фильтр"/>

                    <Grid Grid.Row="1" Margin="5, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" Margin="0, 5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Даты продаж" FontSize="16" Margin="0, 0, 0, 5" TextWrapping="Wrap"/>

                            <xctk:DateTimePicker Grid.Row="1" Format="Custom" FormatString="g" FontSize="16"
                                 x:Name="PickupPointsLoad_DateTime_From_Filter_TextBox" TextAlignment="Left"
                                 Value="{Binding PickupPointsLoadFilter.datetime_from, Converter={StaticResource DateTimeSecondsConverter}, 
                        ConverterParameter={StaticResource int_0}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="1" Text="От"
                                       IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,5,0"
                                       Foreground="LightGray"
                                       FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_DateTime_From_Filter_TextBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_DateTime_From_Filter_TextBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Text="|" HorizontalAlignment="Center" FontSize="16" Margin="0, 0, 0, 1.5"/>

                            <xctk:DateTimePicker Grid.Row="3" Format="Custom" FormatString="g" FontSize="16"
                                 x:Name="PickupPointsLoad_DateTime_To_Filter_TextBox" TextAlignment="Left"
                                 Value="{Binding PickupPointsLoadFilter.datetime_to, Converter={StaticResource DateTimeSecondsConverter}, 
                        ConverterParameter={StaticResource int_59}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Row="3" Text="До"
                                       IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,5,0"
                                       Foreground="LightGray"
                                       FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_DateTime_To_Filter_TextBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_DateTime_To_Filter_TextBox}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0, 5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Всего продано" FontSize="16" Margin="0, 0, 0, 5"/>
                            <Grid Grid.Row="1" Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <xctk:IntegerUpDown Grid.Column="0" FontSize="16" Name="PickupPointsLoad_TotalQuantity_From_Filter_UpDown"
                                    Value="{Binding PickupPointsLoadFilter.total_quantity_from}" Minimum="0" TextAlignment="Left"/>

                                <xctk:IntegerUpDown Grid.Column="2" FontSize="16" Name="PickupPointsLoad_TotalQuantity_To_Filter_UpDown"
                                    Value="{Binding PickupPointsLoadFilter.total_quantity_to}" Minimum="0" TextAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="От"
                                           IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,5,0"
                                           Foreground="LightGray"
                                           FontSize="16">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_TotalQuantity_From_Filter_UpDown}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="До"
                                           IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,5,0"
                                           Foreground="LightGray"
                                           FontSize="16">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_TotalQuantity_To_Filter_UpDown}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Grid.Column="1" Text="-" FontSize="16"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="3" Margin="0, 5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Адрес" FontSize="16" Margin="0, 0, 0, 5"/>
                            <TextBox FontSize="16" Grid.Row="1" Name="PickupPointsLoad_Address_Filter_TextBox"
                                     Text="{Binding PickupPointsLoadFilter.address, Converter={StaticResource TextToSerchableConverter}}"/>
                            <TextBlock Grid.Row="1" Text="Адрес"
                                       IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,5,0"
                                       Foreground="LightGray"
                                       FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PickupPointsLoad_Address_Filter_TextBox}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Button Grid.Row="100" Style="{StaticResource Button_Style}" 
                                Click="PickupPointsLoad_Filter_Button_Click" Content="Фильтр"
                                Margin="5" Padding="5" Height="Auto"/>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" BorderThickness="1" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding Statistics, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                          FontSize="16" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableColumnVirtualization="False"
                          EnableRowVirtualization="True"
                          SelectionMode="Extended"
                          x:Name="PickupPointsLoad_DataGrid">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn SortMemberPath="address" Width="500">
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridCell_NoBorder_Style}">
                                    <Style.Setters>
                                        <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                    </Style.Setters>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding address}" TextWrapping="Wrap" Margin="3, 0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Адрес" TextAlignment="Center" TextWrapping="Wrap"/>
                            </DataGridTemplateColumn.Header>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding order_count}" IsReadOnly="True" Width="160">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="Всего заказов" TextAlignment="Center" TextWrapping="Wrap"/>
                            </DataGridTextColumn.Header>
                            <DataGridTextColumn.CellStyle>
                                <Style BasedOn="{StaticResource DataGridCell_NoBorder_Style}" TargetType="DataGridCell">
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1">
                    <Button Grid.Row="100"
                            Click="PickupPointsLoad_SaveStatistics_Button_Click" Content="Сохранить данные"
                            Margin="5" Padding="5" Height="Auto">
                        <Button.Style>
                            <Style BasedOn="{StaticResource Button_Style}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Items.Count, ElementName=PickupPointsLoad_DataGrid}" Value="0">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
